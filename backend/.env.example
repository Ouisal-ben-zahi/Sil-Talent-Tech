# ============================================
# Configuration Supabase - Sil Talents Tech
# ============================================

# Supabase Configuration
SUPABASE_URL="https://[PROJECT-REF].supabase.co"
SUPABASE_ANON_KEY="your-anon-key-here"

# Supabase Service Role Key (pour Storage - OBLIGATOIRE pour upload CV)
# Récupérez cette clé dans Supabase: Settings → API → Project API keys → service_role secret
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# JWT Configuration
JWT_SECRET="changez-moi-en-production-avec-une-cle-secrete-forte"
JWT_EXPIRES_IN="7d"

# API Configuration
PORT=3001
NODE_ENV=development
API_BASE_URL="http://localhost:3001"

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# File Upload Configuration
# Note: Les CV sont maintenant stockés dans Supabase Storage, pas sur le système de fichiers
CV_UPLOAD_PATH="./cvs"  # Gardé pour compatibilité, mais non utilisé
MAX_FILE_SIZE="10485760"  # 10 Mo

# CRM Configuration (Boom Manager) - Optionnel
CRM_API_URL=""
CRM_API_KEY=""

# Admin Seed Password (optionnel - pour créer le premier admin)
ADMIN_PASSWORD="Admin123!"
